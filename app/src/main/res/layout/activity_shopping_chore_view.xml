<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="-1dp"
    android:padding="0dp"
    android:theme="@style/AppTheme"
    tools:context="ca.choremanager.ChoreView">

    <LinearLayout
        android:layout_width="363dp"
        android:layout_height="575dp"
        android:layout_marginTop="8dp"
        android:gravity="fill_vertical"
        android:orientation="vertical"
        android:weightSum="1"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="-3dp"
        tools:layout_editor_absoluteY="0dp">

        <android.support.v7.widget.Toolbar
            android:id="@+id/my_toolbar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:background="@color/colorPrimary"
            android:elevation="4dp"
            android:padding="0dp"
            android:paddingBottom="10dp"
            app:title="Shopping"
            tools:layout_editor_absoluteX="-6dp"
            tools:layout_editor_absoluteY="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="0dp"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <ImageView
                android:id="@+id/userIcon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@mipmap/ic_launcher_round" />

            <TextView
                android:id="@+id/userName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="left|center_vertical"
                android:paddingLeft="10dp"
                android:text="User Name"
                android:textSize="24dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="157dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Deadline"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Date"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/recurring"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Reccuring"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/deadline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Weekly" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Shopping List"
                android:textSize="20dp" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="fill_horizontal"
                android:columnCount="2">

                <TextView
                    android:id="@+id/item1"
                    android:layout_width="160dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="Shopping Item #1" />

                <TextView
                    android:id="@+id/item2"
                    android:layout_width="160dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Shopping Item #2" />

                <TextView
                    android:id="@+id/item3"
                    android:layout_width="160dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="Shopping Item #3" />

                <TextView
                    android:id="@+id/item4"
                    android:layout_width="160dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Shopping Item #4" />

                <TextView
                    android:id="@+id/item5"
                    android:layout_width="160dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="Shopping Item #5" />

                <TextView
                    android:id="@+id/item6"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="Shopping Item #6" />

                <TextView
                    android:id="@+id/item7"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="Shopping Item #7" />

                <TextView
                    android:id="@+id/item8"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="Shopping Item #8" />

                <TextView
                    android:id="@+id/item9"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="Shopping Item #9" />

                <TextView
                    android:id="@+id/item10"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="Shopping Item #10" />

                <TextView
                    android:id="@+id/item11"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="Shopping Item #11" />

                <TextView
                    android:id="@+id/item12"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="Shopping Item #12" />

                <TextView
                    android:id="@+id/item14"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="Shopping Item #13" />

                <TextView
                    android:id="@+id/seeRest"
                    android:layout_width="160dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Click To See Rest of List" />

            </GridLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Notes"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Insert Notes" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="5dp"
            android:layout_weight="0.11"
            android:gravity="bottom"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Mark as Complete" />
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>